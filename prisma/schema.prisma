// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["orderByAggregateGroup", "selectRelationCount", "referentialActions"]
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   @unique //clerkJs
  agencies  Agency[]

  @@index([id, userId])
}

model Agency {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  userId    String
  zones     Zone[]
  user      User     @relation(fields: [userId], references: [id])

  @@unique([name, userId])
  @@index([id, userId])
}

model Zone {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  zoneName  String
  agencyId  String
  parcels   Parcel[]
  agency    Agency   @relation(fields: [agencyId], references: [id])

  @@unique([zoneName, agencyId])
  @@index([id, zoneName])
}

model Parcel {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  zoneName  String
  tracking  String //20-2410828-2386869-7
  code      String //2386869
  zone      Zone     @relation(fields: [zoneName], references: [id])

  @@unique([zoneName, tracking])
  @@index([id, code])
}
